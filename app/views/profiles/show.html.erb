<div>
  <p>Hi <%= @user.email %></p>
  <% if @profile.bio %>
    <hr>
    <p><%= @profile.bio %></p>
  <% else %>
    <p>Fill out the rest of your profile!</p>
    <%= render partial: 'profiles/form', locals: {type: @profile} %>
  <% end %>
</div>
<hr>


